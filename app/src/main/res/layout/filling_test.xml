<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionNumbers" />

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Which of the following are true for objects of Python's set type:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <LinearLayout
        android:id="@+id/answersContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question">

        <ToggleButton
            android:id="@+id/answerA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/toggle_answer_selector"
            android:padding="16dp"
            android:textOff="a. Sets are mutable."
            android:textOn="a. Sets are mutable."
            android:textAllCaps="false"
            android:gravity="start"
            android:textColor="@xml/selector_answer_text" />

        <ToggleButton
            android:id="@+id/answerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/toggle_answer_selector"
            android:padding="16dp"
            android:textOff="b. The order of elements in a set is significant."
            android:textOn="b. The order of elements in a set is significant."
            android:textAllCaps="false"
            android:textColor="@xml/selector_answer_text" />

        <ToggleButton
            android:id="@+id/answerC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/toggle_answer_selector"
            android:padding="16dp"
            android:textOff="c. A set may contain elements that are mutable."
            android:textOn="c. A set may contain elements that are mutable."
            android:textAllCaps="false"
            android:textColor="@xml/selector_answer_text" />

        <ToggleButton
            android:id="@+id/answerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/toggle_answer_selector"
            android:padding="16dp"
            android:textOff="d. A given element can’t appear in a set more than once."
            android:textOn="d. A given element can’t appear in a set more than once."
            android:textAllCaps="false"
            android:textColor="@xml/selector_answer_text" />
    </LinearLayout>
</merge>